<h1>Image <%= @image.name %></h1>

<%= link_to 'Go Back', video_path(id: @image.video_id) %>

<div>
  <h2>Coordinates: <%= "#{@image.latitude}, #{@image.longitude}" %></h2>
  <% if @image.image_file.attached? %>
    <%= image_tag @image.image_file.representation({resize_to_limit: [800, 800]}) %>
    <br>
    <b>Size: <%= @image.size_in_mb %></b>
    <br>
    <b>Download: [TODO: Add download button here]</b>
  <% else %>
    <b>No image attached!</b>
  <% end %>
</div>
